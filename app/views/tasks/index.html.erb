<h1>Current Tasks for <%= current_user.name %> </h1>
<table class='table table-striped'>
  <tr>
    <th>Time</th>
    <th>Issue</th>
    <th>Summary</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @tasks.each do |task| %>
  <tr>
    <% if task.running_timer? %>
      <td><%= link_to 'Stop', stop_timer_path(:task_id => task.id) %></td>
    <% else %>
      <td><%= link_to 'Start', start_timer_path(:task_id => task.id) %></td>
    <% end %>
    <td><%= task.issue_id %></td>
    <td><%= task.summary %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task) %></td>
    <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />


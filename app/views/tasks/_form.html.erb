<%= simple_form_for(@task) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :project_id, collection: Project.all %>
    <%= f.input :issue_id %>
    <%= f.input :summary %>
    <%= f.input :classification, collection: ['Development', 'Project Management', 'Business Development', 'Infrastructure'] %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

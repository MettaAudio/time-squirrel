<h2>Weekly Total</h2>
<% @projects.each do |project| %>
<% next if project.tasks.collect { |t| t if t.total_time_this_week > 0 }.compact.count == 0 %>
  <h3><%= project.title %></h3>
  <table class="table table-striped">

    <thead>
      <tr>
        <th>ID</th>
        <th>Task</th>
        <th>Total</th>
      </tr>
    </thead>

    <tbody>
      <% project.tasks.each do |task| %>
      <% next if task.timers.count == 0 %>
        <tr>
          <td><%= link_to(task.issue_id, "https://railsdog.atlassian.net/browse/#{task.issue_id}", html_options = {:target => '_blank'}) %></td>
          <td><%= task.summary %></td>
          <td class='timer'><%= formatted_duration(task.total_time_this_week) %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
  <p>&nbsp;</p>
  <p>&nbsp;</p>
<% end %>
